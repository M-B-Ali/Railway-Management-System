extends layout

block stylesheets 
  link(rel='stylesheet', href='/stylesheets/styles.css')

block scripts



block headerContent
  .header-item(class='secondry-logo')
  .header-item(class='center-header-item')
    .agent-login
      a(href="/agent")
        button Agent Login
    .user-login-register
      button Login
      button Register
  .header-item(class='primary-logo')

block mainContent
  .search-container
    .search-train-label Search Train
    .search-train-label PNR Status
    .search-train-label Charts / Vacancy
    .search-train-container
      .heading-item(class='search-train-item') Search Train
      input(class="search-train-item"
        type="text"
        list=""
        placeholder="From"
        name="from")
      input(type="date" class="search-train-item")
      input(class="search-train-item"
        type="text"
        placeholder="To"
        name="to")
      select(class="search-train-item" id="class-type")
        option(value="all-classes") All Classes
        option(value="first-ac") First AC
        option(value="second-ac") Second AC
        option(value="third-ac") Third AC
        option(value="sleeper") Sleepe
        option(value="chair-car") Chair Car
      select(class="search-train-item" id="journey-type")
        option(value="general") General
        option(value="ladies") Ladies
        option(value="lower-berth-sr-citizen") Lower Berth/ Sr. Citizen
        option(value="divyaang") Divyaang
        option(value="tatkal") Tatkal
        option(value="premium-tatkal") Premium Tatkal
      //- <!-- <div class="search-train-item">(list) Type (Default General):</div> -->
      .bool-container
        div
          input(type="checkbox" id="divyaang")
          label(for="divyaang") Divyaang Concession
        div
          input(id="flexible_with_date" type="checkbox")
          label(for="flexible_with_date") Flexible with date
        div
          input(id="trains_with_available_berth" type="checkbox")
          label(for="trains_with_available_berth") Train with available berth
        div
          input(id="railway_pass_concession" type="checkbox")
          label(for="railway_pass_concession") Railway Pass Concession
      button(class="search-button") Search
      